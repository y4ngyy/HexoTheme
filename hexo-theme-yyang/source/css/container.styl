.content-container {
  background: #ddd;
  position: absolute;
  min-height: 100%;
  right: 0;
  left: 300px;
}
.content-container .content {
  margin: 40px;
  background: white;
  padding: 20px;
  border: 1px solid #d8d8d8;
}
.content-container .archives .archive-item {
  width: 90%;
  margin: auto;
}
.content-container .archives .nav-link:hover{
  background: #eaeaea;
}
.content article {
  width: 90%;
  margin: auto;
}
.read-more{
  background: #8cc2fb;
  border-radius: 2em;
  padding: 6px;
  color: white;
}
.read-more:hover{
  text-decoration: none;
  color: white;
  background: #5398fb;
}
#title{
  color: black;
}
#title:hover{
  text-decoration: none;
  color: black;
}
.content-container footer {
  position: absolute;
  bottom: 0;
  font-size: 1.25em;
  left: 0;
  right : 0;
}